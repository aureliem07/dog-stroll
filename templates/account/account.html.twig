{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block container %}

<div class="row gutters-sm m-5">
  <div class="col-lg-4 mb-5">
    <div class="card shadow border-0">
    <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="profil" class="rounded-circle" width="150">
          <div class="mt-3">
            <h4>{{ app.user.lastName}} {{ app.user.firstName}}</h4>
            <p class="text-secondary mb-1">{{ app.user.nickname}}</p>
            <p class="text-muted font-size-sm">{{ app.user.town}}</p>
            <a class="btn btn-warning" href="{{ path('add_dog', {'user': app.user.id}) }}">Ajouter un chien</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-8 mb-5">
    <div class="card shadow border-0">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Pr√©nom</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.lastName}}
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Nom</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.firstName}}
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Pseudo</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.nickname}}
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Mail</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.email}}
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Ville</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.town}}
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-3">
            <h6 class="mb-0">Bio</h6>
          </div>
          <div class="col-sm-9 text-secondary">
            {{ app.user.bio}}
          </div>
        </div>
        <hr>        
        <div class="row">
          <div class="col-6 text-center">
            <a class="btn btn-success" href="{{ path('edit_account', {'user': app.user.id}) }}">
              <i class="fas fa-pencil-alt"></i>
            </a>
          </div>
          <div class="col-6 text-center">
            <a class="btn btn-danger" href="{{ path('remove_account', {'user': app.user.id}) }}">
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% for dog in dogs %}
  <div class="col-lg-6">
    <div class="card shadow border-0">
    <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
          <img src="https://images.unsplash.com/photo-1561754050-9a1ee0470c73?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1575&q=80" alt="profil" class="rounded-circle" width="150">
          <div class="mt-3">
            <h4>{{ dog.name}}</h4>
            <p class="text-secondary font-size-sm my-0">{{ dog.birthYear}}</p>
            <p class="text-secondary font-size-sm my-0">{{ dog.breed}}</p>
            <p class="text-secondary font-size-sm my-0">{{ dog.sex}}</p>
            <p class="text-secondary font-size-sm my-0">{{ dog.bio}}</p>
          </div>
        </div>
        <div class="row">
          <div class="col-6 text-center">
            <a class="btn btn-success" href="{{ path('edit_dog', {'dog': dog.id}) }}">
              <i class="fas fa-pencil-alt"></i>
            </a>
          </div>
          <div class="col-6 text-center">
            <a class="btn btn-danger" href="{{ path('remove_dog', {'dog': dog.id}) }}">
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>
        
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}